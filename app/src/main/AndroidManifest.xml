<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Magazynex"
        tools:targetApi="31">

        <activity android:name=".ui.main.MainMenuActivity" android:exported="true" android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.product.ProductDetailsActivity"
            android:label="Szczegóły produktu"/>
        <activity android:name=".ui.orders.OrderDetailsActivity"
            android:label="Szczegóły listy"/>
        <activity android:name=".ui.user.LoginActivity"
            android:label="Ekran logowania"/>
        <activity android:name=".ui.user.ManageAccountsActivity"
            android:label="Zarządzanie użytkownikami"/>
        <activity android:name=".ui.category.ManageCategoriesActivity"
            android:label="Zarządzanie kategoriami"/>
    </application>
</manifest>